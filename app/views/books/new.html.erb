<div class="row">
    <div class="col-md-6 col-md-offset-3">

    <% if @book.errors.any? %>
        <% @book.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger" role="alert">
        <%= msg %>
        </div>
        <% end %>
    <% end %>

<%= form_for @book, {
        :url => { :controller => 'books', :action => 'create'}, 
        :html => {:class => "form-horizontal"}
    } do |f|%>
    <div class="form-group">
        <%= f.label :title, "書名", :class => "col-sm-2 control-label"%> 
        <div class="col-sm-8">
            <%= f.text_field :title, :class => "form-control"%>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :spoturl, "監測網址", :class => "col-sm-2 control-label" %>
        <div class="col-sm-8">
            <%= f.text_field :spoturl, :class => "form-control" %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :sitename, "網站", :class => "col-sm-2 control-label" %>
        <div class="col-sm-8">
            <%= f.text_field :sitename, :class => "form-control" %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2">
            <%= f.submit "新增資料" , :class => "btn btn-primary"%>
            <a href="/" class="btn btn-default">取消</a>
        </div>
    </div>
<% end %>

    </div>

</div>
