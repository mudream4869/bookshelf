<div class="row">
    <div class="col-md-6 col-md-offset-3">
        
        <%= form_for @nserver, {
            :url => { :controller => 'spotservers', :action => 'create'}, 
            :html => {:class => "form-inline"}
            } do |f|%>

            <%= f.text_field :url, :class => "form-control" %>
            <%= f.submit "新增資料" , :class => "btn btn-primary"%>

        <% end %>

        <table class="table">
            <thead>
                <td>伺服器名稱</td> <td>操作</td>
            </thead>

            <tbody>
                <% @servers.each do |server|  %>
                <tr>
                    <td> <%=server.url%> </td>
                    <td>
                      <%= link_to '刪除', {:controller => 'spotservers', :action => 'destroy', :id => server}, 
                      class: "btn btn-warning" %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table> 

    </div>
</div>

<script language="javascript">

init = function(){
    $(".btn-new-server").click(function(){
        $.post($(this).attr("href"),{
            "server" : $("#server").attr("value") 
        }, function(res){
            
        });
        return false;
    });

}

$(document).ready(init);
$(document).on('page:load', init);
</script>
